{
  "private": true,
  "license": "MIT",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "ts:lint": "tslint \"packages/**/*.tsx\" \"packages/**/*.ts\"",
    "ts:lint:fix": "yarn ts:lint -- --fix",
    "ts:format": "tsfmt --replace packages/**/*.ts packages/**/*.tsx",
    "ts:style": "npm run ts:lint:fix && npm run ts:format",
    "start": "webpack-dev-server --env.dev --env.element=blaze-elements --hot",
    "start:prod": "pushstate-server dist/",
    "test": "npm run build:test && toolbelt/test.sh",
    "test:watch": "concurrently \"npm run build:test:watch\" \"WCT_INDEX=./index.watch.test.html toolbelt/test.sh -p\"",
    "test:watch:firefox": "concurrently \"npm run build:test:watch\" \"WCT_INDEX=./index.watch.test.html toolbelt/test.sh -p -l firefox\"",
    "build": "npm run cleanup && webpack --env.prod --env.element=blaze-elements",
    "build:test": "npm run cleanup && webpack --env.test --env.element=blaze-elements",
    "build:test:watch": "npm run cleanup && webpack-dev-server --env.test --env.element=blaze-elements",
    "site": "rimraf tmp/site && webpack --env.site --env.element=blaze-elements",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "prepush": "npm run ts:lint && npm test",
    "toolbelt:generate:configs": "node toolbelt/generate-configs.js",
    "toolbelt:packagelist": "node toolbelt/generate-packages-list.js",
    "cleanup": "rimraf dist && rimraf packages/**/dist",
    "semantic-release": "lerna-semantic-release pre && lerna-semantic-release perform && lerna-semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wc-catalogue/blaze-elements.git"
  },
  "dependencies": {
    "blaze": "^3.2.0",
    "core-js": "^2.4.1",
    "date-fns": "^1.24.0",
    "decko": "^1.1.3",
    "skatejs": "4.6.7",
    "skatejs-web-components": "5.2.1",
    "tslib": "^1.5.0"
  },
  "devDependencies": {
    "@types/expect": "^1.20.0",
    "@types/mocha": "^2.2.37",
    "@types/node": "^7.0.5",
    "@types/sinon-chai": "^2.7.27",
    "awesome-typescript-loader": "^3.0.3",
    "bore": "^2.0.1",
    "commitizen": "^2.9.5",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.1",
    "cz-lerna-changelog": "1.0.0",
    "expect": "^1.20.2",
    "favicons-webpack-plugin": "^0.0.7",
    "file-loader": "^0.10.0",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.26.0",
    "husky": "^0.13.1",
    "lerna": "2.0.0-beta.37",
    "lerna-semantic-release": "^9.0.6",
    "lodash.capitalize": "^4.2.1",
    "markdown-loader": "^2.0.0",
    "node-sass": "^4.1.1",
    "pushstate-server": "^2.1.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.1",
    "style-loader": "^0.13.1",
    "test-fixture": "^1.0.2",
    "to-string-loader": "^1.1.5",
    "tslint": "^4.4.2",
    "tslint-react": "^2.3.0",
    "typescript": "2.2.0",
    "typescript-formatter": "4.1.0",
    "url-loader": "^0.5.7",
    "validate-commit-msg": "^2.11.1",
    "wct-sauce": "2.0.0-pre.1",
    "web-component-tester": "^5.0.0",
    "webpack": "^2.2.1",
    "webpack-config-utils": "^2.3.0",
    "webpack-dev-server": "^2.3.0",
    "webpack-merge": "^3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "maxSubjectLength": 120
    }
  },
  "packages": [
    "accordion",
    "alert",
    "app-layout",
    "badge",
    "breadcrumb",
    "bubble",
    "button",
    "calendar",
    "card",
    "collapsible",
    "drawer",
    "input",
    "modal",
    "nav",
    "overlay",
    "progress",
    "range",
    "select",
    "tag",
    "toggle",
    "tooltip",
    "tree",
    "typography"
  ]
}
