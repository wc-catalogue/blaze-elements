{
  "name": "blaze-elements",
  "version": "1.0.5",
  "main": "dist/main.js",
  "repository": "git@github.com:wc-catalogue/blaze-elements.git",
  "author": "elemementor",
  "license": "MIT",
  "files": [
    "dist/main.js",
    "dist/polyfills.js",
    "dist/vendors.js"
  ],
  "scripts": {
    "packagelist": "node utils/generate-packages-list.js",
    "start": "npm run packagelist && webpack-dev-server --env.dev --hot --host 0.0.0.0",
    "build": "npm run packagelist && rimraf dist && webpack --env.prod",
    "build:publish": "npm run build && ./utils/deploy-ghpages.sh",
    "prepublish": "npm run build",
    "start:prod": "pushstate-server dist/"
  },
  "dependencies": {
    "blaze": "^3.2.0",
    "core-js": "^2.4.1",
    "skatejs": "^4.1.2",
    "skatejs-web-components": "^5.0.0",
    "tslib": "^1.2.0"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^3.0.0-beta.9",
    "css-loader": "^0.26.1",
    "html-webpack-plugin": "^2.24.1",
    "json-loader": "^0.5.4",
    "lerna": "2.0.0-beta.30",
    "lodash.capitalize": "^4.2.1",
    "node-sass": "^3.13.0",
    "pushstate-server": "^2.1.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "to-string-loader": "^1.1.5",
    "typescript": "next",
    "webpack": "beta",
    "webpack-config-utils": "^2.1.0",
    "webpack-dev-server": "beta"
  },
  "packages": [
    "accordion",
    "alert",
    "badge",
    "breadcrumb",
    "bubble",
    "button",
    "card",
    "collapsible",
    "drawer",
    "input",
    "link",
    "modal",
    "nav",
    "overlay",
    "progress",
    "range",
    "toggle",
    "tooltip",
    "tree"
  ]
}
