{
  "name": "blaze-elements",
  "version": "1.2.0",
  "main": "dist/main.js",
  "repository": "git@github.com:wc-catalogue/blaze-elements.git",
  "author": "elemementor",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "postinstall": "lerna bootstrap",
    "packagelist": "node toolbelt/generate-packages-list.js",
    "start": "npm run packagelist && webpack-dev-server --env.dev --hot --host 0.0.0.0",
    "start:prod": "pushstate-server dist/",
    "test": "npm run build:test && toolbelt/test.sh -l firefox",
    "test:watch": "concurrently \"npm run build:test:watch\" \"WCT_INDEX=./index.watch.test.html toolbelt/test.sh -p\"",
    "test:watch:firefox": "concurrently \"npm run build:test:watch\" \"WCT_INDEX=./index.watch.test.html toolbelt/test.sh -p -l firefox\"",
    "build": "rimraf dist && npm run packagelist && webpack --env.prod",
    "build:test": "rimraf dist && npm run packagelist && webpack --env.test",
    "build:test:watch": "npm run packagelist && webpack-dev-server --env.test"
  },
  "dependencies": {
    "blaze": "^3.2.0",
    "core-js": "^2.4.1",
    "date-fns": "^1.24.0",
    "skatejs": "^4.6.5",
    "skatejs-web-components": "^5.1.0",
    "tslib": "^1.5.0"
  },
  "devDependencies": {
    "@types/expect": "^1.20.0",
    "@types/mocha": "^2.2.37",
    "@types/sinon-chai": "^2.7.27",
    "awesome-typescript-loader": "^3.0.0-beta.18",
    "bore": "^1.1.1",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.1",
    "expect": "^1.20.2",
    "favicons-webpack-plugin": "^0.0.7",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.26.0",
    "json-loader": "^0.5.4",
    "lerna": "2.0.0-beta.32",
    "lodash.capitalize": "^4.2.1",
    "markdown-loader": "^0.1.7",
    "node-sass": "^4.1.1",
    "pushstate-server": "^2.1.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "test-fixture": "^1.0.2",
    "to-string-loader": "^1.1.5",
    "tslint": "^4.3.1",
    "tslint-loader": "^3.3.0",
    "typescript": "^2.1.4",
    "wct-sauce": "2.0.0-pre.1",
    "web-component-tester": "^5.0.0",
    "webpack": "beta",
    "webpack-config-utils": "^2.1.0",
    "webpack-dev-server": "beta"
  },
  "packages": [
    "accordion",
    "alert",
    "badge",
    "breadcrumb",
    "bubble",
    "button",
    "calendar",
    "card",
    "collapsible",
    "drawer",
    "input",
    "modal",
    "nav",
    "overlay",
    "progress",
    "range",
    "tag",
    "toggle",
    "tooltip",
    "tree",
    "typography"
  ]
}
