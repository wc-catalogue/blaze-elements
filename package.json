{
  "name": "blaze-elements",
  "version": "1.2.0",
  "main": "dist/main.js",
  "repository": "git@github.com:wc-catalogue/blaze-elements.git",
  "author": "elemementor",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "packagelist": "node toolbelt/generate-packages-list.js",
    "start": "npm run packagelist && webpack-dev-server --env.dev --hot --host 0.0.0.0",
    "start:prod": "pushstate-server dist/",
    "test": "npm run build && toolbelt/test.sh",
    "test:watch": "concurrently \"npm run build:test\" \"toolbelt/test.sh -p\"",
    "test:watch:firefox": "concurrently \"npm run build:test\" \"toolbelt/test.sh -p -l firefox\"",
    "build": "rimraf dist && npm run packagelist && webpack --env.prod",
    "build:test": "rimraf dist && npm run packagelist && webpack --env.test -w"
  },
  "dependencies": {
    "blaze": "^3.2.0",
    "core-js": "^2.4.1",
    "skatejs": "^4.1.2",
    "skatejs-web-components": "^5.0.0",
    "tslib": "^1.2.0"
  },
  "devDependencies": {
    "@polymer/iron-test-helpers": "^0.0.3",
    "awesome-typescript-loader": "^3.0.0-beta.9",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.1",
    "favicons-webpack-plugin": "^0.0.7",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.24.1",
    "json-loader": "^0.5.4",
    "lerna": "2.0.0-beta.32",
    "lodash.capitalize": "^4.2.1",
    "markdown-loader": "^0.1.7",
    "node-sass": "^4.1.1",
    "pushstate-server": "^2.1.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "test-fixture": "^1.0.2",
    "to-string-loader": "^1.1.5",
    "tslint": "^4.2.0",
    "tslint-loader": "^3.3.0",
    "typescript": "next",
    "wct-sauce": "2.0.0-pre.1",
    "web-component-tester": "^5.0.0",
    "webpack": "beta",
    "webpack-config-utils": "^2.1.0",
    "webpack-dev-server": "beta"
  },
  "packages": [
    "accordion",
    "alert",
    "badge",
    "breadcrumb",
    "bubble",
    "button",
    "card",
    "collapsible",
    "drawer",
    "input",
    "modal",
    "nav",
    "overlay",
    "progress",
    "range",
    "tag",
    "toggle",
    "tooltip",
    "tree",
    "typography"
  ]
}
